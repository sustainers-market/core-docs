{
  "steps": [
    {
      "name": "node:10.16.0",
      "entrypoint": "bash",
      "args": ["-c", "npm install"]
    },
    {
      "name": "node:10.16.0",
      "entrypoint": "bash",
      "args": ["-c", "npx asyncapi-generator docs.yaml html"]
    },
    {
      "name": "gcr.io/cloud-builders/git",
      "entrypoint": "bash",
      "args": [
        "-c",
        "git clone https://github.com/sustainers-market/docs-template.git ."
      ]
    },
    {
      "name": "node:10.16.0",
      "entrypoint": "bash",
      "args": [
        "-c",
        "mkdir site && mv index.html site && mv css site && mv js site"
      ]
    },
    {
      "name": "gcr.io/cloud-builders/gsutil",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gsutil -m rsync -r -c -d site gs://docs.core.sustainers.net"
      ]
    }
  ]
}
