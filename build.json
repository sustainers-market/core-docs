{
  "steps": [
    {
      "name": "node:10.16.0",
      "entrypoint": "bash",
      "args": ["-c", "npm install"]
    },
    {
      "name": "node:10.16.0",
      "entrypoint": "bash",
      "args": [
        "-c",
        "git clone https://github.com/Mermade/shins.git docs && cd docs && npm install"
      ]
    },
    {
      "name": "node:10.16.0",
      "entrypoint": "bash",
      "args": [
        "-c",
        "npx widdershins --language_tabs 'node:Node' --summary doc.json -o docs/source/index.html.md"
      ]
    },
    {
      "name": "node:10.16.0",
      "entrypoint": "bash",
      "args": ["-c", "cd docs && node shins.js --minify"]
    },
    {
      "name": "gcr.io/cloud-builders/gsutil",
      "entrypoint": "bash",
      "args": [
        "-c",
        "gsutil -m rsync -r -c -d --include="index.html" --include="pub" docs/ gs://docs.core.sustainers.net"
      ]
    }
  ]
}
